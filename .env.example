# ===========================================
# Instagram AI Management System - Environment Variables
# ===========================================

# Application
NODE_ENV=development
APP_NAME=Instagram AI Management System
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/instagram_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=instagram_ai
DB_USER=admin
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_URL=redis://:password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PROFESSIONAL=price_professional_id
STRIPE_PRICE_PREMIUM=price_premium_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# Anthropic (Claude API)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Apify (Instagram Data)
APIFY_API_TOKEN=apify_api_your_token_here
APIFY_ACTOR_ID=apify/instagram-profile-scraper

# AWS S3 (PDF Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=instagram-ai-reports

# Email (SendGrid/SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@instagram-ai.com

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Agent Orchestrator
AGENT_ORCHESTRATOR_URL=http://localhost:8000
AGENT_TIMEOUT_SECONDS=120
MAX_CONCURRENT_ANALYSES=10

# PDF Generator
PDF_GENERATOR_URL=http://localhost:3002
PDF_QUALITY=300
PDF_MAX_SIZE_MB=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

{
  "name": "instagram-ai-system",
  "version": "1.0.0",
  "description": "Multi-agent Instagram AI Management System",
  "private": true,
  "workspaces": [
    "backend-api",
    "frontend",
    "pdf-generator",
    "payment-service",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:agents\" \"npm run dev:pdf\" \"npm run dev:payment\"",
    "dev:backend": "cd backend-api && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:agents": "cd agent-orchestrator && uvicorn main:app --reload --port 8000",
    "dev:pdf": "cd pdf-generator && npm run dev",
    "dev:payment": "cd payment-service && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:pdf && npm run build:payment",
    "build:backend": "cd backend-api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:pdf": "cd pdf-generator && npm run build",
    "build:payment": "cd payment-service && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend-api && npm start",
    "start:frontend": "cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend-api && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:coverage": "npm run test -- --coverage",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend-api && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint -- --fix",
    "migrate": "cd backend-api && npx prisma migrate deploy",
    "migrate:dev": "cd backend-api && npx prisma migrate dev",
    "migrate:reset": "cd backend-api && npx prisma migrate reset",
    "db:seed": "cd backend-api && npx prisma db seed",
    "db:studio": "cd backend-api && npx prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:rebuild": "docker-compose up -d --build",
    "clean": "rm -rf node_modules && rm -rf */node_modules",
    "prepare": "node -e \"if (!process.env.CI) { require('child_process').execSync('husky install', {stdio: 'inherit'}) }\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.0",
    "pg": "^8.17.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "lib": "^5.1.0"
  }
}
